{
    "version": 2,
    "env": {
        "NODE_ENV": "production",
        "MYSQL_HOST": "@mysql_host",
        "MYSQL_USER": "@mysql_user",
        "MYSQL_PASS": "@mysql_pass",
        "MYSQL_DB": "@mysql_db",
        "MYSQL_SRV_HOST": "@mysql_srv_host",
        "MYSQL_SRV_PORT": "@mysql_srv_port",
        "POST_PORT": "@post_port",
        "JWT_SECRET": "@jwt_secret",
        "REMOTE_DB": "@remote_db",
        "API_PORT": "@api_port"
    },
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "post/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/auth(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/api/user(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/api/post(.*)",
            "dest": "/post/index.js"
        }
    ]
}
